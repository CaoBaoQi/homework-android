<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!--添加考试页面-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam_textview"
        android:text="添加考试"
        android:gravity="center_horizontal"
        android:textSize="24sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:id="@+id/line_view"
        android:background="#000000"
        android:layout_below="@id/exam_textview"/>

    <TextView
        android:id="@+id/examname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="科目"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/name"
        android:layout_below="@id/line_view"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_view"
        android:layout_toRightOf="@id/examname_textview"
        android:id="@+id/examname_edittext"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/examtime_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/examname_textview"
        android:text="时间"
        android:textSize="18sp"
        android:gravity="center"
        android:drawableLeft="@drawable/time"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/examname_edittext"
        android:layout_toRightOf="@id/examtime_textview"
        android:id="@+id/examtimemonth_spinner"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/examtimemonth_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/examname_edittext"
        android:layout_toRightOf="@id/examtimemonth_spinner"
        android:text="月"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <Spinner
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/examname_edittext"
        android:layout_toRightOf="@id/examtimemonth_textview"
        android:id="@+id/examtimeday_spinner"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/examtimeday_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/examname_edittext"
        android:layout_toRightOf="@id/examtimeday_spinner"
        android:text="日"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/examroom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:drawableLeft="@drawable/room"
        android:layout_below="@id/examtime_textview"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/examtimemonth_textview"
        android:layout_toRightOf="@id/examtime_textview"
        android:id="@+id/examroom_edittext"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/examadd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/examroom_edittext"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:text="确认添加" />

    <Button
        android:id="@+id/examfinish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/examroom_edittext"
        android:layout_toRightOf="@id/examadd_button"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:text="返回" />

</RelativeLayout>