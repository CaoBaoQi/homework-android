<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <!--设置界面-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_textview"
        android:text="设置"
        android:gravity="center_horizontal"
        android:textSize="24sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:id="@+id/line_view"
        android:background="#000000"
        android:layout_below="@id/set_textview"/>

    <TextView
        android:id="@+id/weeks_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择当前周数"
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:layout_below="@id/line_view"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/weeks_textview"
        android:id="@+id/weeks_spinner"
        android:layout_margin="5dp"
        android:layout_below="@id/line_view"/>

    <TextView
        android:id="@+id/terms_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weeks_textview"
        android:text="请选择当前学期"
        android:textSize="16sp"
        android:layout_margin="5dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weeks_spinner"
        android:layout_toRightOf="@id/terms_textview"
        android:id="@+id/terms_spinner"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_button"
        android:layout_below="@id/terms_textview"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="确认"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_button"
        android:text="@string/bug"
        android:textSize="16sp"
        android:layout_margin="5dp"/>

</RelativeLayout>